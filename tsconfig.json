{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/components/*" : ["./components/*"],
      "@/pages/*" : ["./pages/*"],
      "@/public/*" : ["./public/*"],
      "@/styles/*" : ["./styles/*"]
    },
    "outDir": "build",
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ]
}
